<div class='container'>
  <div class='row pt-5'>
    <div class="col-lg-4">
      <h5 class="bg-dark text-light text-center"><%= @customer.name %>さんの会員情報編集</h5>
    </div>
  </div>
  <div class='row mt-5'>
    <%= form_with model:[:admin,@customer], local:true do |f| %>
    <table>
      <tr>
        <th><%= f.label :id, "会員ID" %></th>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <th><%= f.label "氏名" %></th>
        <td><%= f.text_field :name, autocomplete: "name" %></td>
      </tr>
      <tr>
        <th><%= f.label "電話番号(ハイフンなし)" %></th>
        <td><%= f.text_field :telephone_number, autocomplete: "telephone_number" %></td>
      </tr>
      <tr>
        <th><%= f.label "メールアドレス" %></th>
        <td><%= f.email_field :email, saautofocus: true, autocomplete: "email" %></td>
      </tr>
      <tr>
        <th><%= f.label "会員ステータス" %></th>
        <td>
          <%= f.radio_button :is_deleted, 'false' %>
          <%= f.label :is_deleted, "有効", {value: 'false', style: "display: inline-block;"} %>
          <%= f.radio_button :is_deleted, 'true' %>
          <%= f.label :is_deleted, "退会", {value: 'true', style: "display: inline-block;"} %>
        </td>
      </tr>
      <tr>
        <td>
          <%= f.submit "変更を保存",class: 'btn btn-outline-success btn-lg' %>
        </td>
      </tr>
    </table>
    <% end %>
  </div>
</div>