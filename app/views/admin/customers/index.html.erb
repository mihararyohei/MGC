<div class="container py-5">
  <div class="row">
    <div class="col">
      <h3 class="text-center">会員一覧</h3>
    </div>
    <table class='table'>
      <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
    　</thead>
    　<tbody>
　      <% @customers.each do |customer| %>
　      <tr>
　        <td><%= customer.id %></td>
　        <td><%= link_to customer.name,admin_customer_path(customer.id) %></td>
　        <td><%= customer.email %></td>
　        <td>
            <% if customer.is_deleted == false %>
              <span class="text-success">有効</span>
            <% else %>
              <span class="text-secondary">退会</span>
            <% end %>
          </td>
　      </tr>
　      <% end %>
    　</tbody>
    </table>
  </div>
  <div class="row">
    <div class="col-12 d-flex justify-content-center">
      <%= paginate @customers %>
    </div>
  </div>
</div>