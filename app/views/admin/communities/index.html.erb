<div class="container py-5 ">
  <div class="row">
    <div class="col">
      <h5 class="bg-dark text-light text-center">コミュニティ一覧・追加</h5>
      <%= form_with model: [:admin, @community] do |f| %>
        <div class="col-sm-9 ">
          <%= f.label :name,"コミュニティ名" %>
          <%= f.text_field :community_name,class: "form-control text_field" %>
          <%= f.submit "新規登録", class: 'btn btn-success' %>
      </div>
      <% end %>

    <table>
      <thead>
        <tr>
          <th></th>
          <th>コミュニティ</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @communities.each do |community| %>
          <tr>
            <td>
              <%= community.community_name %>
            </td>
            <td></td>
            <td>
              <%= link_to '編集する',edit_admin_community_path(community.id), class: "btn btn-sm btn-success" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
  </div>