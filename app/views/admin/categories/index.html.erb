<div class="container py-5 ">
  <div class="row">
    <div class="col-lg-3">
      <h5 class="bg-dark text-light text-center">カテゴリー一覧・追加</h5>
    </div>
  </div>
  <div class="row mt-5">
    <div class="row form-group">
      <%= form_with model: [:admin, @category] do |f| %>
      <div class="d-flex flex-row bd-highlight ml-6">
        <div class="form-group ">
          <%= f.label :name,"カテゴリー名" %>
        </div>
        <div class="form-group ml-5">
          <div class="col-sm-12 ">
          <%= f.text_field :category_name, class: "form-control text_field" %>
          </div>
        </div>
        <div class="form-group ml-5">
          <%= f.submit "新規登録", class: 'btn btn-success' %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  <table class="table-hover">
    <thead class="bg-dark text-light">
      <tr>
        <th></th>
        <th>カテゴリー</th>
        <th colspan = "2"></th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td>
            <%= category.category_name %>
          </td>
          <td width = "150"></td>
          <td>
            <%= link_to '編集する', edit_admin_category_path(category), class: "btn btn-sm btn-success" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>