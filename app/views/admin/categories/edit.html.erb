<div class="container py-5">
  <div class="row">
    <div class="col">
      <h3 class="text-center">カテゴリー編集</h3>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-3"></div>
    <div class="col-7 form-group">
      <%= form_with model: [:admin, @category] do |f| %>
        <div class="d-flex flex-row bd-highlight ml-6">
          <div class="form-group ">
            <%= f.label :name,"カテゴリー名" %>
          </div>
          <div class="form-group ml-5">
            <div class="col-sm-12 ">
              <%= f.text_field :category_name, class: "form-control text_field" %>
            </div>
          </div>
          <div class="form-group ml-5">
            <%= f.submit "編集する", class: 'btn btn-success' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>