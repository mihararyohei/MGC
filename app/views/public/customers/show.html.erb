<div class="container py-5">
  <div class="row">
    <div class="col-12">
      <h3 class="text-center">マイページ</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-3"></div>
    <div class="col-2">
      <div>プロフィール画像</div>
      <%= image_tag @customer.get_profile_image, size: '150x150' %>
    </div>
    <div class="col-5">
      <table class="table">
        <tr>
         <td>氏名</td>
         <td><%= @customer.name %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <% if @customer.name != "guestuser" %>
            <td><h4><%= link_to "プロフィール編集", edit_customer_path(@customer.id), class:"btn btn-success" %></h4></td>
            <td></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
  <div class="row py-5">
    <div class="col-5"></div>
    <div class="col-5">
      <table class="table">
        <tr>
          <td><h4>MY BookMark</h4></td>
          <td><%= link_to "お気に入り", bookmarks_path, class:"btn btn-primary" %></td>
        </tr>
        <tr>
          <td><h4>Room</h4></td>
          <td><%= link_to "ルーム一覧", rooms_path, class:"btn btn-primary" %></td>
        </tr>
      </table>
    </div>
  </div>
</div>