<div class="container py-5">
 <h4>会員情報編集</h4>
 <div class="row pt-3">
 <%= form_with model: @customer, url: customer_path(@customer.id), method: :patch do |f| %>
   <table class="table">
    <tr>
     <td>氏名</td>
     <td><%= f.text_field :name, autocomplete: "name" %></td>
    </tr>
    <tr>
     <td>電話番号</td>
     <td><%= f.text_field :telephone_number, autocomplete: "telephone_number" %></td>
    </tr>
    <tr>
     <td>メールアドレス</td>
     <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
    </tr>
    <tr>
     <td>プロフィール画像</td>
     <td><%= f.file_field :profile_image,accept: "image/*", autofocus: true, autocomplete: "image" %></td>
    </tr>
   </table>
   <table>
     <tr>
       <td><%= f.submit "編集内容を保存", class: "btn btn-success" %></td>
       <td></td>
       <td><%= link_to "退会する", customers_unsubscribe_path, class: "btn btn-danger" %></td>
     </tr>
   </table>
 <% end %>
 </div>
</div>
