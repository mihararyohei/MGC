      <%# DBから %>
      <tr>
      <td style="width: 20%">
        <small class="text-danger">
        <%= image_tag message.customer.get_profile_image, size: '50x50' %><br>
        <%= message.customer.name %>
      </small>
      </td>
      <td  style="width: 30%; word-break: break-all;">
