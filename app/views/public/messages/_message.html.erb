<% if !current_customer.nil? %>
  <%# DBから %>
  <tr>
    <td style="width: 20%">
      <small class="text-danger">
        <%= image_tag message.customer.get_profile_image, size: '50x50' %><br>
        <%= message.customer.name %>
      </small>
    </td>
    <td style="width: 30%; word-break: break-all;">
      <%= message.content %>
    </td>
    <% if current_customer == message.customer %>
      <td style="width: 10%">
        <%= link_to '削除',rooms_destroy_path(message.id),method: :delete, data: { confirm: '本当に削除しますか？'},class: "btn btn-sm btn-success" %>
      </td>
    <% else %>
    <% end %>
  </tr>
<% else %>
  <%# ACから %>
  <tr>
    <td>
      <small class="text-warning">
        <%= image_tag current_customer.get_profile_image, size: '50x50' %><%= current_customer.name %>
      </small>
    </td>
    <td>
      <%= simple_format(message['message']) %>
    </td>
  </tr>
<% end %>