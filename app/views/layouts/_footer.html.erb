<div class="text-right mr-3">
  <% if admin_signed_in? %>
    <%= form_with url: admin_searches_search_path, local: true, method: :get do |f| %>
      <%= f.text_field :word %>
      <%= f.select :range, options_for_select([['Customer'], ['Room']]) %>
      <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["部分一致","partial_match"]]) %>
      <%= f.submit "検索" %>
    <% end %>
  <% else %>
    <% if customer_signed_in? %>
      <%= form_with url: searches_search_path, local: true, method: :get do |f| %>
        <%= f.text_field :word %>
        <%= f.select :range, options_for_select([['Customer'], ['Room']]) %>
        <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["部分一致","partial_match"]]) %>
        <%= f.submit "検索" %>
      <% end %>
    <% else %>
    <% end %>
  <% end %>
</div>